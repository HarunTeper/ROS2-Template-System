{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All Packages",
            "type": "shell",
            "command": "cd packages && colcon build --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build all ROS 2 packages in the workspace."
        },
        {
            "label": "Build Single Package",
            "type": "shell",
            "command": "cd packages && colcon build --packages-select ${input:packageName} --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build a specific ROS 2 package."
        },
        {
            "label": "Run Template System",
            "type": "shell",
            "command": "source packages/install/setup.bash && ros2 launch template_system multi_node_system.launch.py",
            "problemMatcher": []
        },
        {
            "label": "Run RQT Graph",
            "type": "shell",
            "command": "source packages/install/setup.bash && ros2 run rqt_graph rqt_graph",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "packageName",
            "type": "promptString",
            "description": "Enter the name of the package to build.",
            "default": "template_system"
        }
    ]
}